CREATE TABLE `blog`.`t_user` (
 `id` INT( 10 ) UNSIGNED NOT NULL AUTO_INCREMENT PRIMARY KEY COMMENT '主键',
`user_name` VARCHAR( 32 ) CHARACTER SET utf8 COLLATE utf8_unicode_ci NULL COMMENT '用户名',
`user_password` VARCHAR( 64 ) CHARACTER SET utf8 COLLATE utf8_unicode_ci NULL COMMENT '密码',
`user_address` VARCHAR( 128 ) CHARACTER SET utf8 COLLATE utf8_unicode_ci NULL COMMENT '地址',
`user_telephone` CHAR( 11 ) CHARACTER SET utf8 COLLATE utf8_unicode_ci NULL COMMENT '手机号',
`stat` VARCHAR( 8 ) CHARACTER SET utf8 COLLATE utf8_unicode_ci NULL COMMENT '状态',
INDEX ( `user_name` )
) ENGINE = InnoDB CHARACTER SET utf8 COLLATE utf8_unicode_ci COMMENT = '用户信息表'